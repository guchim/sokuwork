<div class="container">
    <div class="row">
        <div class="col-md-4 order-md-1 mb-4 setting-option">
          <h4 class="d-flex align-items-center mb-3">
            <span class="text-muted">マイページメニュー</span>
          </h4>
          <ul class="list-group">
            <li class="list-group-item">
              <%=link_to "応募者の確認", "/companies/confirmation", class:"list-group-link"%>
            </li>
            <li class="list-group-item">
              <%=link_to "個人情報の設定", "/companies/edit", class:"list-group-link"%>
            </li>
          </ul>
        </div>
        <div class="col-md-8 order-md-2 setting-profile">
          <h4 class="mb-3">企業店舗情報の設定</h4>
          <form class="needs-validation novalidate">
            <div class="row">
              <div class="col-md-12 mb-3">
                <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
                  <div class="form-group">
                    <%=label_tag "name", "店舗名"%>
                    <%= f.text_field :name, id:"name",autofocus: true, placeholder: "ファミリーマート即WORK店", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%=label_tag "phone-number", "電話番号"%>
                    <%= f.text_field :phone_number, id:"phone-number", autofocus: true, placeholder: "090-1234-5678", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%=label_tag "email", "メールアドレス"%>
                    <%= f.email_field :email, id:"email", autofocus: true, placeholder: "sokuwork@gmail.com", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%=label_tag "password", "パスワード"%>
                    <%= f.password_field :password, id:"password", autocomplete: "off", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%=label_tag "password-confirmation", "確認用パスワード"%>
                    <%= f.password_field :password_confirmation, id:"password-confirmation", autocomplete: "off", class: "form-control" %>
                  </div>
                  <div class="actions">
                    <%= f.submit "保存する", class: "btn btn-warning w-100" %>
                  </div>
                <% end %>
             </div>
              </div>
            </div>
        </div>
    </div>
