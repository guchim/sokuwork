<div class="container">
    <h2 class="copy">求人募集作成ページ</h2>
    <%= render 'layouts/error_messages', model: f.object %>
    <%= form_with scope: :offers, url: "/companies/create" do |f| %>
        <div class="form-group">
            <p>掲載する画像</p>
            <%=f.file_field :images%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-category", "職種のカテゴリー"%><br>
            <%=f.select :category_id, options_from_collection_for_select(@categories, :id, :name), {include_blank: "選択してください"}, {class: "form-control col-md-3"}%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-title", "タイトル"%>
            <%=f.text_field :title, id:"offers-title", placeholder: "例）ファミマ即WORK店レジ業務経験必須!!", class:"form-control col-md-6"%>
        </div>
        <div class="form-group">
            <p>福利厚生</p>
            <%=f.collection_check_boxes :walfare_ids, Walfare.all, :id, :name, include_hidden: false do |b|%>
                <%= b.check_box%>
                <%= b.label%>
            <%end%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-date", "出勤日"%>
            <%=f.date_field :date, id:"offers-date", class:"form-control col-md-2"%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-start-time", "出勤時間"%>
            <%=f.time_field :start_time, id:"offers-start-time", class:"form-control col-md-2"%>
            <p>〜</p>
            <%=f.time_field :end_time, id:"offers-end-time", class:"form-control col-md-2"%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-contents", "業務内容"%>
            <%=f.text_area :contents, :rows => "5", id:"offers-contents", placeholder: "例）主にレジの業務を担当していただきます", class:"form-control"%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-cautions", "注意事項"%>
            <%=f.text_area :cautions, :rows => "5", id:"offers-cautions", placeholder: "例）清潔感のある格好でお願いします。遅刻厳禁です。", class:"form-control"%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-conditions", "働くための条件"%>
            <%=f.text_area :conditions, :rows => "5", id:"offers-conditions", placeholder: "例）テキパキと働ける方、笑顔で元気な方", class:"form-control "%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-belongings", "持ち物"%>
            <%=f.text_field :belongings, id:"offers-belongings", placeholder: "例）黒のボールペン、メモ帳など", class:"form-control"%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-address", "住所"%>
            <%=f.text_field :address, id:"offers-address", placeholder: "例）東京都渋谷区ウォーク5-15-123", class:"form-control"%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-access", "アクセス"%>
            <%=f.text_field :access, id:"offers-access", placeholder: "例）渋谷駅から徒歩5分！、新宿駅から約200m", class:"form-control"%>
        </div>
        <div class="form-group">
            <%=label_tag "offers-pay", "報酬"%>
            <%=f.text_field :payment, id:"offers-pay", placeholder: "", class:"form-control col-md-2 col-sm-4"%>
            <p>円</p>
        </div>
        <div class="text-right">
            <%=submit_tag "募集する", class:"btn btn-primary recruitment-button"%>
        </div>
    <%end%>
</div>
