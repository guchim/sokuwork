<div class="container">
    <div class="row">
        <div class="col-md-4 order-md-1 mb-4 setting-option">
          <h4 class="d-flex align-items-center mb-3">
            <span class="text-muted">マイページメニュー</span>
          </h4>
          <ul class="list-group">
            <li class="list-group-item">
              <%=link_to "応募者の確認", "/companies/confirmation", class:"list-group-link"%>
            </li>
            <li class="list-group-item">
              <%=link_to "個人情報の設定", "/companies/edit", class:"list-group-link"%>
            </li>
          </ul>
        </div>
        <div class="col-md-8 order-md-2 setting-profile">
          <h4 class="mb-3">応募者の確認</h4>
          <div class="needs-validation novalidate">
            <div class="row">
              <div class="col-md-12 mb-3">
                <%@applicant.each do |a|%>
                <div class="card confirmation-card">
                  <h5 class="card-header"><%=a.offer.title%>への応募</h5>
                  <div class="card-body">
                    <div class="media">
                        <%=image_tag a.photo.to_s, class:"mb-3 user_photo"%>
                        <div class="media-body">
                            <h5 class="mt-0">
                              <%=a.name%>様 
                              (<%=(Date.today.strftime(@date_format).to_i - a.user.birthday.strftime(@date_format).to_i) / 10000%>)
                              <%=a.gender%>
                            </h5>
                            <p>連絡先[<%=a.phone_number%>]</p>
                            <p><%=simple_format(a.introduction)%></p>
                        </div>
                    </div>
                  </div>
                </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>