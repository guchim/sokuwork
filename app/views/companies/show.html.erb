<div class="container">
    <h3 class="copy">企業様の編集ページです</h3>
    
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">見出し１</th>
              <th scope="col">見出し２</th>
              <th scope="col">見出し３</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
        　<% @offers.each do |offer| %>
            <tr>
              <td><%= offer.title%></td>
              <td><%= offer.date%></td>
              <td><%= offer.start_time%>〜<%= offer.end_time%></td>
